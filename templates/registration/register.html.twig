{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/style/login.css') }}">
    <style>
        body {
            background-image: url("../img/fond4.png");
        }
    </style>
{% endblock %}
{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname,{
            label:'Pr√©nom'
        }) }}
        {{ form_row(registrationForm.lastname,{
            label:'Nom'
        }) }}
        {{ form_row(registrationForm.email,{
            label:'E-mail'
        }) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.password) }}
        {{ form_row(registrationForm.birthday, {
            label: 'Date de naissance'
        }) }}
        {{ form_row(registrationForm.agreeTerms,{
            label:'Je confirme avoir pris connaissance des conditions'
        }) }}

    <div class="g-recaptcha" data-sitekey="6Lc_wpkaAAAAAIL8a02ZTduMXcF9WK0d7ibkQw0M"></div>

    <button type="submit" class="btn">Rejoindre handling</button>
    {{ form_end(registrationForm) }}
{% endblock %}
{% block javascripts %}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}